@page
@model MusicShare.Pages.Canzoni.DetailsModel

@{
    ViewData["Title"] = "Details";

    System.IO.FileInfo fileInfo = new System.IO.FileInfo(Model.Canzone.Nome_file);

    var Exstension = fileInfo.Extension;
}

<h1>Details</h1>

<div>
    <h4>Canzone</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Canzone.Titolo)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Canzone.Titolo)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Canzone.Autore)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Canzone.Autore)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Canzone.Nome_file)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Canzone.Nome_file)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Canzone.Genere)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Canzone.Genere.Nome)
        </dd>
        <dt class="col-sm-2">
            Data di caricamento
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Canzone.Data_Caricamento)
        </dd>
        <dt class="col-sm-2">
            <label>Ascolta canzone</label>
        </dt>
        <dd class="col-sm-10">
            @if (Exstension == ".mp3")
            {
                <audio controls>
                    <source src="~/uploads/@Model.Canzone.Nome_file" type="audio/mp3" />
                </audio>
            }
            else if (Exstension == ".wav")
            {
                <p>Il file è in formato wav e non può essere riprodotto nel browser</p>
            }
            else if (Exstension == ".ogg")
            {
                <audio controls>
                    <source src="~/uploads/@Model.Canzone.Nome_file" type="audio/ogg" />
                </audio>
            }
            else if (Exstension == ".3gp")
            {
                <p>Il file è in formato 3gp e non può essere riprodotto nel browser</p>
            }
        </dd>
    </dl>
</div>
<div>
    <a asp-page="./Edit" asp-route-id="@Model.Canzone.id">Modifica</a> |
    <a asp-page="./Index">Torna alla lista</a>
</div>
