@page
@model MusicShare.Pages.Raccolte.EditModel

@{
    ViewData["Title"] = "Modifica";
}

<h1>Modifica</h1>

<h4>Raccolta</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Raccolta.Id" />
            <div class="form-group">
                <label asp-for="Raccolta.Nome" class="control-label"></label>
                <input asp-for="Raccolta.Nome" class="form-control" />
                <span asp-validation-for="Raccolta.Nome" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input asp-for="Raccolta.Data_Creazione" class="form-control" type="hidden" />
                <span asp-validation-for="Raccolta.Data_Creazione" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Salva" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a class="btn btn-info" asp-page="./Index">Torna alle raccolte</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
