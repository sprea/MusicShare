@page
@model MusicShare.Pages.Raccolte.AddsongModel

@{
    ViewData["Title"] = "Aggiungi canzoni";
}

<h1>Aggiungi canzone alle tue playlist</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="RaccoltaCanzoni.Raccolta.Nome" class="control-label"></label>
                <select asp-for="RaccoltaCanzoni.Id_Raccolta" class ="form-control" asp-items="ViewBag.Id_Raccolta"></select>
            </div>
            <div class="form-group">
                <label asp-for="RaccoltaCanzoni.Canzone.Titolo" class="control-label"></label>
                <select asp-for="RaccoltaCanzoni.Id_Canzone" class ="form-control" asp-items="ViewBag.Id_Canzone"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Aggiungi" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a class="btn btn-info" asp-page="Index">Torna alle playlist</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
